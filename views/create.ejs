<%- include('header') %>

<div class="blog-sign">
    <h4 class="text-center">发表文章</h4>
    <form method="post" action="/posts">
        <div class="form-group">
            <label for="title">标题</label>
            <input type="text" name="title" class="form-control" id="title" required>
        </div>
        <div class="form-group">
            <label for="content">内容</label>
            <textarea class="form-control" rows="15" name="content" id="content" required></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn blog-btn">发&nbsp;&nbsp;表</button>
        </div>
    </form>
</div>

<%- include('footer') %>